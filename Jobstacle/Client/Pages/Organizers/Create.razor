@page "/organizers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Organizer</h3>
<hr />
<br />

<FormComponent ButtonText="Create Organizer" organizer="organizer" OnValidSubmit="@CreateOrganizer" />


@code {
    Organizer organizer = new Organizer();

    private async Task CreateOrganizer()
    {
        await _client.PostAsJsonAsync(Endpoints.OrganizersEndpoint, organizer);
        _navManager.NavigateTo("/organizers/");
    }

}

