@page "/staffs/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<div style="display: flex; align-items: center;">
	<img src="css/staffs.png" alt="Staffs Image" style="width: 60px; height: 60px; margin-right: 10px;">
	<h3>View Staff</h3>
</div>
<FormComponent staff="staff" Disabled="true" />

@code {
	[Parameter] public int id { get; set; }
	Staff? staff = new Staff();
	protected async override Task OnParametersSetAsync()
	{
		staff = await
		_client.GetFromJsonAsync<Staff>($"{Endpoints.StaffsEndpoint}/{id}");
	}
}